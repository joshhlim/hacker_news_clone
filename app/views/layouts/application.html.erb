<!DOCTYPE html>
<html>
<head>
  <title>SinatraToRailsPick1Of3Challenge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
  <nav>
  <ul>
    <li><%= link_to 'Home', questions_path %></li>
    <% if logged_in? %>
      <li><%= link_to 'Profile', user_path(@user) %></li>
      <li><%= link_to 'Log Out', user_path(@user),
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
      </li>
    <% else %>
      <li><%= link_to 'Register', new_user_path %></li>
      <li><%= link_to 'Login', '/users/login' %></li>
    <% end %>
  </ul>
  <%= yield %>
  </nav>
</header>

</body>
</html>
